#!perl
use strict;
use warnings;
use Voson::Setup;
use Getopt::Long;

my $appname = shift(@ARGV);
help() unless $appname;

my $plugins = 'Normal';

GetOptions (
    "plugins=s" => $plugins,
);

my $setup = Voson::Setup->new(appname => $appname, plugins => [split(/,/, $plugins)]);
$setup->do_task;

sub help {
    my $data = join('', (<DATA>));
    print $data."\n";
    exit;
}

__DATA__
Usage:

 voson-setup AppName [options]
